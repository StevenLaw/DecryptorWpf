<Page
    x:Class="Decryptor.WinUI.Pages.SettingsPages.Argon2Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Decryptor.WinUI.Pages.SettingsPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Argon 2 Settings"
                   Style="{StaticResource SettingsTitle}"
                   Grid.ColumnSpan="4"/>

        <TextBlock Text="Degrees of Parallelism"
                   Style="{StaticResource Label}"
                   Grid.Row="1"/>
        <NumberBox Value="{x:Bind ViewModel.Argon2DegreesOfParallelism, Mode=TwoWay}"
                   LargeChange="10"
                   SmallChange="1"
                   Minimum="1"
                   SpinButtonPlacementMode="Inline"
                   Grid.Column="1"
                   Grid.Row="1"/>

        <TextBlock Text="Iterations"
                   Style="{StaticResource Label}"
                   Grid.Column="2"
                   Grid.Row="1"/>
        <NumberBox Value="{x:Bind ViewModel.Argon2Iterations, Mode=TwoWay}"
                   LargeChange="10"
                   SmallChange="1"
                   Minimum="1"
                   SpinButtonPlacementMode="Inline"
                   Grid.Column="3"
                   Grid.Row="1"/>

        <TextBlock Text="Memory Size"
                   Style="{StaticResource Label}"
                   Grid.Row="2"/>
        <NumberBox Value="{x:Bind ViewModel.Argon2MemorySize, Mode=TwoWay}"
                   LargeChange="100"
                   SmallChange="1"
                   Minimum="4"
                   SpinButtonPlacementMode="Inline"
                   Grid.Column="1"
                   Grid.Row="2"/>

        <TextBlock Text="Salt Length"
                   Style="{StaticResource Label}"
                   Grid.Column="2"
                   Grid.Row="2"/>
        <NumberBox Value="{x:Bind ViewModel.Argon2SaltLength, Mode=TwoWay}"
                   LargeChange="10"
                   SmallChange="1"
                   Minimum="16"
                   Maximum="1024"
                   SpinButtonPlacementMode="Inline"
                   Grid.Column="3"
                   Grid.Row="2"/>

        <TextBlock Text="Hash Length"
                   Style="{StaticResource Label}"
                   Grid.Row="3"/>
        <NumberBox Value="{x:Bind ViewModel.Argon2HashLength, Mode=TwoWay}"
                   LargeChange="10"
                   SmallChange="1"
                   Minimum="16"
                   Maximum="1024"
                   SpinButtonPlacementMode="Inline"
                   Grid.Column="1"
                   Grid.Row="3"/>
    </Grid>
</Page>
