<UserControl x:Class="Decryptor.UserControls.SuccessIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Decryptor.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Image x:Name="imgSuccess" 
               Source="/Resources/iconmonstr-check-mark-14-16.png"
               Stretch="None"/>
        <Image x:Name="imgFail" 
               Source="/Resources/iconmonstr-x-mark-5-16.png"
               Stretch="None"/>
    </StackPanel>
</UserControl>
