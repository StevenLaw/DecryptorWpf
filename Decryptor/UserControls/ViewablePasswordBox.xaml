<UserControl x:Class="Decryptor.UserControls.ViewablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Decryptor.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <PasswordBox x:Name="pwd" LostFocus="Pwd_LostFocus" KeyUp="Pwd_KeyUp"/>
        <TextBox x:Name="txt" Visibility="Collapsed" LostFocus="Pwd_LostFocus" KeyUp="Pwd_KeyUp"/>
    </StackPanel>
</UserControl>
