<UserControl x:Class="Decryptor.UserControls.Spinner"
             x:Name="spinner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:local="clr-namespace:Decryptor.UserControls"
             mc:Ignorable="d">
    <fa:ImageAwesome Icon="Spinner"
                     Spin="True" 
                     SpinDuration="3" 
                     Width="{Binding ActualWidth, ElementName=spinner}"
                     Height="{Binding ActualHeight, ElementName=spinner}"
                     Foreground="DodgerBlue"/>
</UserControl>
